{
  "name": "__MSG_appName__",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/chromereload.js",
      "scripts/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "https://localhost/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "bower_components/jquery/dist/jquery.js",
        "./embeds/photon-flickr.js"
      ],
      "css": [
        "./embeds/photon-flickr.css"
      ],
      "run_at": "document_end",
      "all_frames": false
    },
    {
      "matches": [
        "https://*.flickr.com/*",
        "https://*.staticflickr.com/*"
      ],
      "js": [
        "bower_components/jquery/dist/jquery.js",
        "./embeds/photon-flickr.js"
      ],
      "css": [
        "./embeds/photon-flickr.css"
      ],
      "run_at": "document_end",
      "all_frames": false
    },
    {
      "matches": [
        "https://*.500px.com/*",
        "https://*.500px.org/*"
      ],
      "js": [
        "bower_components/jquery/dist/jquery.js",
        "./embeds/500px.js"
      ],
      "css": [
        "./embeds/photon-flickr.css"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },

    "background": {
      "scripts": "popup.js",
      "persistent" : false
    },

    "default_title": "photon_ai_ext",
    "default_popup": "popup.html"
    }

}
